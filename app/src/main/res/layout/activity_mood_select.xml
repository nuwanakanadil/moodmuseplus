<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary_60">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/mood_title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/mood_subtitle"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
            app:layout_constraintBottom_toTopOf="@id/actions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Emoji grid (2 rows x 5) -->
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/emoji_happy"
                            style="@style/EmojiChip"
                            android:text="ðŸ˜Š" />

                        <TextView
                            android:id="@+id/emoji_calm"
                            style="@style/EmojiChip"
                            android:text="ðŸ˜Œ" />

                        <TextView
                            android:id="@+id/emoji_energized"
                            style="@style/EmojiChip"
                            android:text="âš¡" />

                        <TextView
                            android:id="@+id/emoji_sad"
                            style="@style/EmojiChip"
                            android:text="ðŸ˜”" />

                        <TextView
                            android:id="@+id/emoji_anxious"
                            style="@style/EmojiChip"
                            android:text="ðŸ˜Ÿ" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/emoji_relaxed"
                            style="@style/EmojiChip"
                            android:text="ðŸ«¶" />

                        <TextView
                            android:id="@+id/emoji_loved"
                            style="@style/EmojiChip"
                            android:text="ðŸ¥°" />

                        <TextView
                            android:id="@+id/emoji_tired"
                            style="@style/EmojiChip"
                            android:text="ðŸ¥±" />

                        <TextView
                            android:id="@+id/emoji_angry"
                            style="@style/EmojiChip"
                            android:text="ðŸ˜ " />

                        <TextView
                            android:id="@+id/emoji_neutral"
                            style="@style/EmojiChip"
                            android:text="ðŸ™‚" />
                    </TableRow>
                </TableLayout>

                <!-- Divider label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mood_color_label"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="20dp" />

                <!-- Color chips row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <View
                        android:id="@+id/chip_butter"
                        style="@style/ColorChip"
                        android:backgroundTint="@color/mood_butter"
                        android:tag="butter" />

                    <View
                        android:id="@+id/chip_honey"
                        style="@style/ColorChip"
                        android:backgroundTint="@color/mood_honey"
                        android:tag="honey" />

                    <View
                        android:id="@+id/chip_amber"
                        style="@style/ColorChip"
                        android:backgroundTint="@color/mood_amber"
                        android:tag="amber" />

                    <View
                        android:id="@+id/chip_orange"
                        style="@style/ColorChip"
                        android:backgroundTint="@color/mood_orange"
                        android:tag="orange" />

                    <View
                        android:id="@+id/chip_bronze"
                        style="@style/ColorChip"
                        android:backgroundTint="@color/mood_bronze"
                        android:tag="bronze" />

                    <View
                        android:id="@+id/chip_sand"
                        style="@style/ColorChip"
                        android:backgroundTint="@color/mood_sand"
                        android:tag="sand" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Bottom actions -->
        <LinearLayout
            android:id="@+id/actions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:background="@drawable/bg_chip_selectable" />

            <Space
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_continue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/continue_text"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:background="@drawable/bg_button_accent" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
