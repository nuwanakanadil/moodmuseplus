<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <size android:width="220dp" android:height="220dp"/>
            <solid android:color="@color/secondary_30_light"/>
            <stroke android:width="2dp" android:color="@color/secondary_30_softgold"/>
        </shape>
    </item>
    <item android:width="180dp" android:height="180dp" android:gravity="center">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="120dp"
                android:centerColor="@color/mood_honey"
                android:endColor="@color/mood_amber"/>
            <stroke android:width="1dp" android:color="@color/secondary_30_softgold"/>
        </shape>
    </item>
</layer-list>
