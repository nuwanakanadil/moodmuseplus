<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- selected -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/secondary_30_light"/>
            <corners android:radius="24dp"/>
            <stroke android:width="2dp" android:color="@color/accent_10"/>
        </shape>
    </item>

    <!-- default -->
    <item>
        <shape>
            <solid android:color="@color/secondary_30_light"/>
            <corners android:radius="24dp"/>
            <stroke android:width="1dp" android:color="@color/secondary_30_softgold"/>
        </shape>
    </item>
</selector>
